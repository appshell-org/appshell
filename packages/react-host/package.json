{
  "name": "@appshell/react-host",
  "version": "0.2.0-alpha.0",
  "description": "Appshell host for React",
  "main": "index.js",
  "private": true,
  "scripts": {
    "generate:env": "appshell generate env -e .env --prefix $APPSHELL_ENV_PREFIX --outDir dist",
    "generate:index": "appshell generate index --outDir dist --outFile appshell.index.js --registry $APPSHELL_BASE_MANIFESTS $APPSHELL_REGISTRY",
    "watch:registry": "nodemon --watch $APPSHELL_REGISTRY --ext json --exec yarn generate:index",
    "start": "dotenv -- run-p generate:env watch:registry start:run",
    "start:run": "webpack-cli serve --mode development",
    "prebuild": "yarn clean",
    "build": "webpack --mode production",
    "build:development": "webpack --mode development",
    "serve": "dotenv -- run-s merge:manifest serve:run",
    "serve:run": "serve dist -p $APPSHELL_PORT",
    "serve:developer": "dotenv -- run-s generate:* build:development serve:run",
    "clean": "rm -rf dist"
  },
  "author": "Robert Hamilton <rh@navaris.com>",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "webpack",
    "module federation",
    "micro-frontends",
    "appshell"
  ],
  "license": "MIT"
}
