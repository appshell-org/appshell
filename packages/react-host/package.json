{
  "name": "@appshell/react-host",
  "version": "0.2.0-alpha.4",
  "description": "Appshell host for React",
  "main": "index.js",
  "private": true,
  "scripts": {
    "generate:env": "appshell generate env -e .env --prefix $APPSHELL_ENV_PREFIX",
    "generate:index": "appshell generate index --registry $APPSHELL_EXTERNAL_INDEXES $APPSHELL_REGISTRY",
    "start": "dotenv -- run-p start:appshell start:run",
    "start:appshell": "appshell start --host --registry $APPSHELL_REGISTRY",
    "start:run": "webpack-cli serve --mode development",
    "prebuild": "yarn clean",
    "build": "webpack --mode production",
    "build:development": "webpack --mode development",
    "serve": "dotenv -- run-s merge:manifest serve:run",
    "serve:run": "serve dist -p $APPSHELL_PORT",
    "serve:developer": "dotenv -- run-s generate:* build:development serve:run",
    "clean": "rm -rf dist"
  },
  "author": "Robert Hamilton <rh@navaris.com>",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "webpack",
    "module federation",
    "micro-frontends",
    "appshell"
  ],
  "license": "MIT"
}
