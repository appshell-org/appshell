{
  "name": "@appshell/react-refresh-singleton-plugin",
  "version": "0.0.0",
  "description": "Webpack plugin used to enable react-refresh hot module replacement for distributed frontends using Module Federation",
  "main": "src/ReactRefreshSingletonPlugin.js",
  "repository": "https://github.com/navaris/appshell.git",
  "author": "Robert Hamilton <rh@navaris.com>",
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "webpack --mode production && yarn build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "build:code": "cross-env NODE_ENV=production babel-typescript src -d dist --copy-files",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "start": "webpack --watch --mode development && npm run build:types",
    "stats": "webpack --json > stats.json"
  },
  "files": [
    "src"
  ],
  "peerDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10"
  },
  "keywords": [
    "webpack",
    "react-refresh",
    "module federation",
    "micro-frontends",
    "appshell"
  ],
  "license": "MIT"
}