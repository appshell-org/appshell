{
  "name": "sample-mfe-container",
  "version": "0.0.2",
  "main": "dist/main.js",
  "scripts": {
    "generate:manifest": "appshell generate manifest --config appshell.config.yaml --outDir dist --mode production",
    "register:manifest": "appshell register --manifest dist/appshell.manifest.json --registry $APPSHELL_REGISTRY",
    "watch:config": "nodemon --watch appshell.config.yaml --exec run-s generate:manifest register:manifest",
    "start": "dotenv -- run-p watch:config start:run",
    "start:run": "webpack-cli serve --mode development",
    "build": "webpack --mode production && tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "serve": "serve dist -p $SAMPLE_MFE_CONTAINER_PORT",
    "stats": "webpack --json > stats.json"
  },
  "license": "MIT"
}